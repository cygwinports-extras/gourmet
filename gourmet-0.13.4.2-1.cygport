inherit distutils

DESCRIPTION="GNOME recipe manager"
HOMEPAGE="http://grecipe-manager.sourceforge.net/"

if defined PVP[3]
then
	SRC_URI="mirror://sourceforge/grecipe-manager/${P%.${PVP[3]}}-${PVP[3]}.tar.gz"
	SRC_DIR="${P%.${PVP[3]}}"
else
	SRC_URI="mirror://sourceforge/grecipe-manager/${P}.tar.gz"
fi
